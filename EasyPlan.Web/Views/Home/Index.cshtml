@using System.Web.Optimization
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>EasyPlan</title>

    <script type="text/javascript" src="~/Scripts/underscore.js"></script>
    <script type="text/javascript" src="~/Scripts/q.js"></script>
    <meta charset="utf-8" />

    @Styles.Render("~/Content/css")

</head>
<body>
    <div class="spinner spinner-on">
        @Html.Partial("_splash")
    </div>
    <div id="application">
    </div>

    @Scripts.Render("~/Scripts/vendor")
    <script type="text/javascript" src="~/Scripts/require.js" data-main="/App/main"></script>
    <script id="confirmation-popup-body-template" type="text/x-handlebars-template">
        <div class="confirmation-popup-body">
            <span class="confirmation-popup-message">Are you sure you want to {{body}}?</span>
        </div>
    </script>
</body>
</html>
